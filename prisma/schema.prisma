generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model services {
  id            Int      @id @default(autoincrement())
  category      String
  name          String
  description   String
  phone_numbers String[]
}

model excursoes {
  id            Int      @id @default(autoincrement())
  nome          String
  descricao     String
  estado        String
  origem        String
  rota          String[]
  phone_numbers String[]
}

model transportadoras {
  id            Int      @id @default(autoincrement())
  nome          String
  local         String
  cidade        String
  imagem        String?
  phone_numbers String[]
}

model freteiros {
  id            Int      @id @default(autoincrement())
  nome          String
  local         String
  cidade        String
  imagem        String?
  phone_numbers String[]
}

model hospedagens {
  id            Int      @id @default(autoincrement())
  nome          String
  local         String
  cidade        String
  imagem        String?
  phone_numbers String[]
}

model restaurantes {
  id            Int      @id @default(autoincrement())
  nome          String
  imagem        String?
  cidade        String
  local         String
  phone_numbers String[]
}

model estacionamentos {
  id            Int      @id @default(autoincrement())
  nome          String
  cidade        String
  local         String
  imagem        String?
  phone_numbers String[]
}

model malharias {
  id            Int      @id @default(autoincrement())
  nome          String
  cidade        String
  imagem        String?
  local         String
  phone_numbers String[]
}

model cidades {
  id     Int     @id @default(autoincrement())
  nome   String
  imagem String?
}

model lojas {
  id        Int     @id @default(autoincrement())
  nome      String
  cidade    String
  imagem    String?
  categoria String
}

model quiosques {
  id            Int      @id @default(autoincrement())
  nome          String
  cidade        String
  imagem        String?
  local         String
  phone_numbers String[]
}
